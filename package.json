  "private": false,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "dev:safe": "next dev --port 3001",
    "build": "npm run update-version && next build",
    "build:production": "npm run update-version && next build",
    "start": "next start",
    "lint": "next lint",
    "generate-icons": "node scripts/generate-icons.mjs",
    "update-version": "node scripts/update-version.mjs",
    "prebuild": "npm run generate-icons",
    "deploy": "npm run build:production && echo 'Ready for deployment with updated version!'",
    "android:build": "npm run build && npx cap copy android",
    "android:open": "npx cap open android",
    "android:sync": "npx cap sync android",
    "android:run": "npx cap run android",
    "capacitor:update": "npx cap update",
    "fdroid:prepare": "npm run build && npx cap copy android && npx cap sync android"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
